<div class="row mb-4 post">
    <div class="col-md-5">
        {{#if belongsToUser}}
        <button type="button" id='editPost' data-id='{{post.id}}'>Edit this post</button>
        {{/if}}
        <h2>
            {{post.title}}
        </h2>
        <p>posted by: {{post.user.username}} on {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p class='post'>
            {{post.post_body}}
        </p>
        {{#if comments.length}}
        <h4>Replies to this post:</h3>
            {{#each comments as |comment|}}
            <p class="comments">
                {{comment.text}}
            </p>
            <p class='commenter'>reply from: {{comment.user.username}}</p>
            {{/each}}
            {{/if}}

            {{#if logged_in}}
            {{#if belongsToUser}}
            {{else}}
            <form id='leaveComment' data-id="{{currentUser}}" data-post="{{post.id}}">
                <label for='leaveComment'>Leave a comment</label>
                <textarea class="form-input" id="comment_text" name="leaveComment"></textarea>
                <button type='submit' id='submitComment'>Reply</button>
            </form>
            {{/if}}
            {{/if}}
    </div>
</div>

{{#if belongsToUser}}
<script src='/js/post.js'></script>
{{/if}}

