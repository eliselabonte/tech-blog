<div class="row mb-4 post">
    <div class="col-md-5">
        <h2>
            {{post.title}}
        </h2>
        <p>posted by: {{post.user.username}} on {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{post.post_body}}
        </p>
        {{#if comments.length}}
        <p class="comments">
            {{post.comment.text}}
        </p>
        {{/if}}
        <form>
            <label for='leaveComment'>Leave a comment</label>
            <textarea class="form-input" id="leaveComment" name="leaveComment"></textarea>
            <button type='submit' id='submitComment'></button>
        </form>
    </div>
</div>

<script src='../public/js/create.js'></script>