<div class="row mb-4 post">
    <div class="col-md-5">
        <h2>
            {{post.title}}
        </h2>
        <p>posted by: {{post.user.username}} on {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{post.post_body}}
        </p>
        <p>
            {{post.comment.text}}
        </p>
    </div>
</div>