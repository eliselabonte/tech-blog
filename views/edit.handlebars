<section class="d-flex justify-content-center row">
    <div class="col-auto">
        <h2 class="pt-4 font-monospace">{{post.user.username}}'s Post</h2>
    </div>
</section>

<section class="ps-4 pt-5">
    <h3 class="text-center pb-2 font-monospace">Edit post: {{post.title}}</h3>
    <form class="d-flex flex-wrap justify-content-evenly form editPost" id="editForm" data-id='{{post.id}}'>
        <div class="p-3 form-group">
            <label for="title">Title</label>
            <textarea class="form-input" id="title" name="title" required>{{post.title}}</textarea>
        </div>
        <div class="p-3 form-group">
            <label for="postBody">Body</label>
            <textarea class="form-input" id="postBody" name="postBody" required>{{post.post_body}}</textarea>
        </div>
        <div class="p-3 pb-5 form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
        <div class="col-md-4">
            <button class="btn btn-sm btn-danger" id='deleteButton' data-id="{{post.id}}">DELETE</button>
        </div>
    </div>

</section>

<script src="/js/editPost.js"></script>