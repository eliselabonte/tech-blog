<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>My blog posts</h3>

  {{#if posts.length}}
  <div class="col-md-6 post-list">

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
        <p>{{post.post_body}}</p>
        <p>created on {{format_date post.date_created}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  {{else}}
    <h4>No posts yet!</h4>
    <a href='/dashboard/create'>Start Posting!</a>
  </div>
  {{/if}}

</div>

<script src='/js/createNew.js'></script>
